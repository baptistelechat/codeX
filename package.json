{
  "name": "codex",
  "displayName": "CodeX",
  "description": "A VSCode extension for accessing documentation directly from the IDE",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeX-sidebar",
          "title": "CodeX",
          "icon": "src/assets/images/icon.png"
        }
      ]
    },
    "views": {
      "codeX-sidebar": [
        {
          "type": "webview",
          "id": "codeX.documentations",
          "name": "Documentations"
        }
      ]
    },
    "commands": [
      {
        "command": "codeX.reload",
        "category": "CodeX",
        "title": "Reload",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeX.reload",
          "group": "navigation",
          "when": "view == codeX.documentations"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:tailwind",
    "compile": "tsc -p ./ && npm run build:tailwind",
    "watch": "tsc -watch -p ./ && npm run build:tailwind",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build:tailwind": "npx tailwindcss -i ./src/assets/styles/tailwind.css -o ./src/assets/styles/tailwind.min.css --minify"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  }
}

{
  "name": "codex",
  "displayName": "CodeX",
  "description": "A VSCode extension for accessing documentation directly from the IDE",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeX-sidebar",
          "title": "CodeX",
          "icon": "src/lib/assets/img/icon.png"
        }
      ]
    },
    "views": {
      "codeX-sidebar": [
        {
          "type": "webview",
          "id": "codeX-documentations",
          "name": "Documentations"
        },
        {
          "type": "webview",
          "id": "codeX-notebook",
          "name": "Notebook"
        }
      ]
    },
    "commands": [
      {
        "command": "codeX.addColor",
        "category": "Calico Colors",
        "title": "Add Color"
      },
      {
        "command": "codeX.clearColors",
        "category": "Calico Colors",
        "title": "Clear Colors",
        "icon": "$(clear-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeX.clearColors",
          "group": "navigation",
          "when": "view == codeX-documentations"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}

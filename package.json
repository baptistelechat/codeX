{
  "name": "codex",
  "displayName": "CodeX",
  "description": "A VSCode extension for accessing documentation directly from the IDE",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baptistelechat/codeX"
  },
  "author": {
    "email": "baptistelechat@outlook.fr",
    "name": "Baptiste LECHAT",
    "url": "https://github.com/baptistelechat"
  },
  "publisher": "baptistelechat",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "documentation",
    "shortcuts"
  ],
  "activationEvents": [],
  "icon": "src/lib/assets/images/logo_min.png",
  "galleryBanner": {
    "color": "#0ea5e9",
    "theme": "light"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeX-sidebar",
          "title": "CodeX",
          "icon": "src/lib/assets/images/icon.png"
        }
      ]
    },
    "views": {
      "codeX-sidebar": [
        {
          "type": "webview",
          "id": "codeX.documentations",
          "name": "Documentations"
        }
      ]
    },
    "commands": [
      {
        "command": "codeX.reload",
        "category": "CodeX",
        "title": "Reload",
        "icon": "$(refresh)"
      },
      {
        "command": "codeX.feedback",
        "category": "CodeX",
        "title": "Feedback",
        "icon": "$(comment)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeX.reload",
          "group": "navigation",
          "when": "view == codeX.documentations"
        },
        {
          "command": "codeX.feedback",
          "group": "navigation",
          "when": "view == codeX.documentations"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:tailwind",
    "compile": "tsc -p ./ && npm run build:tailwind",
    "watch": "tsc -watch -p ./ && npm run build:tailwind",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "build:tailwind": "npx tailwindcss -i ./src/lib/assets/styles/tailwind.css -o ./src/lib/assets/styles/tailwind.min.css --minify",
    "package": "vsce package",
    "publish:patch": "vsce publish patch --message=\"ðŸš€ (Publish) - Increment patch version\"",
    "publish:minor": "vsce publish minor --message=\"ðŸš€ (Publish) - Increment minor version\"",
    "publish:major": "vsce publish major --message=\"ðŸš€ (Publish) - Increment major version\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  },
  "packageManager": "yarn@1.22.22"
}
